{
  "packages": ["packages/lib/*", "packages/ui-lib/*", "packages/app/*", "examples/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/doc/**",
        "**/example/**",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
      ],
      "allowBranch": "master"
    }
  }
}
